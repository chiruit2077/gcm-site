<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:br.com.ecc.client.ui.component"
  >
  	<ui:style>
		.fundo {
			width: 100%;
			padding: 0px;
		}
		.menu {
			padding: 2px;
			border: 1px solid white;
			cursor: pointer;
		}
		.menu:hover {
			border: 1px solid lightgray;
			background-color: #f3f3f3;
			color: blue;
		}
		.portafolio {
			padding: 5px;
		}
		.anchor {
			font-weight: bold;
			font-size: large;
		}
		.negrito {
			padding-left: 5px;
		}
		.produtos {
			font-size: 12px;
		}
	</ui:style>
	<g:HorizontalPanel ui:field="homePanel" styleName="{style.fundo}" horizontalAlignment="center" width="100%" height="100%" verticalAlignment="middle">
		<g:HTMLPanel width="100%" height="100%">
			<table cellpading="20" cellspacing="0" border="0" align="center" width="100%" height="100%">
				<tr width="100%"  height="100%">
					<td align="center" valign="middle">
						<g:HorizontalPanel ui:field="gruposPanel" horizontalAlignment="center" verticalAlignment="middle" styleName="{style.portafolio}" width="100%" height="100%"/>
					</td>
				</tr>
				<tr width="100%"  height="200px">
					<td align="center" valign="middle">
						<g:HorizontalPanel horizontalAlignment="center" verticalAlignment="middle" styleName="{style.portafolio}" width="100%" height="100%">
							<g:Button ui:field="loginButton" styleName="portal-formulario-Login" width="250px">Entrar no Sistema</g:Button>
						</g:HorizontalPanel>
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:HorizontalPanel>
 </ui:UiBinder>